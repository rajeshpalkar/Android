<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_blue_bright</item>
        <item name="android:colorBackground">@android:color/darker_gray</item>
        <item name="android:statusBarColor">@android:color/holo_blue_dark</item>
        <item name="android:textColorPrimary">@android:color/background_light</item>
    </style>

    <style name="CoverPageTheme" parent="Theme.AppCompat" >
        <item name="colorPrimaryDark">@android:color/primary_text_dark</item>
        <item name="android:colorBackground">?attr/colorAccent</item>
        <item name="colorPrimary">@android:color/holo_green_light</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="ControlAndEvents" parent="Theme.AppCompat" >
        <item name="colorPrimary">@android:color/holo_green_light</item>
        <item name="android:colorBackground">@android:color/holo_orange_light</item>
    </style>

    <style name="GridTheme" parent="Theme.AppCompat">
        <item name="colorPrimaryDark">#1DE9B6</item>
        <item name="android:textColorPrimaryInverse">@android:color/darker_gray</item>
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
    </style>
</resources>
