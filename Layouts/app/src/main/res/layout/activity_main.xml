<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rajeshpalkar.homework2.MainActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_margin="50dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rajesh Palkar"
            android:layout_gravity="center"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/textView"
            android:textColor="#00E676"
            android:text="CIS 600 Summer '17" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="170dp"
            android:layout_height="148dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/rajesh" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/Task2Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Task 2"/>
        <Button
            android:id="@+id/Task3Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Task 3"/>
        <Button
            android:id="@+id/Task4Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Task 4"/>
    </LinearLayout>

</LinearLayout>
